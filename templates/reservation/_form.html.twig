{{ form_start(form) }}

<div class="row g-3">

    <div class="col-md-6">
        {{ form_label(form.CheckIn, 'Check In Date') }}
        {{ form_widget(form.CheckIn, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.CheckIn) }}
    </div>

    <div class="col-md-6">
        {{ form_label(form.CheckOut, 'Check Out Date') }}
        {{ form_widget(form.CheckOut, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.CheckOut) }}
    </div>

    <div class="col-md-12">
        {{ form_label(form.room, 'Select Room') }}
        {{ form_widget(form.room, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.room) }}
    </div>

    <div class="col-md-12">
        <label class="form-label mb-1">Billing Options</label>
        <p class="text-muted small mb-2">Optional services are billed once per stay.</p>
        <div class="d-flex flex-column gap-2">
            {% for optionField in form.options %}
                <div class="form-check">
                    {{ form_widget(optionField, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(optionField, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
            {% endfor %}
        </div>
        {{ form_errors(form.options) }}
    </div>

    <div class="col-md-12">
        {{ form_label(form.customer, 'Select Customer') }}
        {{ form_widget(form.customer, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.customer) }}
    </div>

    <div class="col-md-12">
        {{ form_label(form.status, 'Reservation Status') }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.status) }}
    </div>

</div>

<button class="btn btn-success w-100 mt-4">
    {{ button_label|default('Save') }}
</button>

{{ form_end(form) }}
