{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.reservations'|trans }}{% endblock %}

{% block body %}
<div class="mt-4">

    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <h1 class="mb-0">{{ 'reservations.title'|trans }}</h1>
        <div class="d-flex align-items-center gap-2">
            <form class="d-flex" method="get" action="{{ path('app_reservation_index') }}">
                <input class="form-control me-2" type="search" name="q" placeholder="{{ 'reservations.search_placeholder'|trans }}" value="{{ query|default('') }}">
                <button class="btn btn-outline-primary" type="submit">{{ 'action.search'|trans }}</button>
            </form>
            <a class="btn btn-success" href="{{ path('app_reservation_new') }}">
                + {{ 'reservation.new.title'|trans }}
            </a>
        </div>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>{{ 'field.customer'|trans }}</th>
                <th>{{ 'field.room'|trans }}</th>
                <th>{{ 'reservation.form.check_in'|trans }}</th>
                <th>{{ 'reservation.form.check_out'|trans }}</th>
                <th>{{ 'field.options'|trans }}</th>
                <th>{{ 'field.total_price'|trans }}</th>
                <th>{{ 'field.status'|trans }}</th>
                <th class="text-center">{{ 'rooms.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>

                <td>
                    {{ reservation.customer.fullName }}
                    <br>
                    <small class="text-muted">{{ reservation.customer.email }}</small>
                </td>

                <td>
                    Room #{{ reservation.room.number }}
                    <br>
                    <small class="text-muted">{{ reservation.room.type }} - {{ reservation.room.price }} MAD / night</small>
                </td>

                <td>{{ reservation.CheckIn ? reservation.CheckIn|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.CheckOut ? reservation.CheckOut|date('Y-m-d') : '' }}</td>

                <td>
                    {% set options = reservation.readableOptions %}
                    {% if options is not empty %}
                        {% for option in options %}
                            <span class="badge bg-info text-dark d-block mb-1">{{ option }}</span>
                        {% endfor %}
                    {% else %}
                        <span class="text-muted">{{ 'reservation.no_options'|trans }}</span>
                    {% endif %}
                </td>

                <td><strong>{{ reservation.totalPrice }} MAD</strong></td>

                <td>
                    {% if reservation.status == 'pending' %}
                        <span class="badge bg-warning text-dark">{{ 'reservation.status.pending'|trans }}</span>
                    {% elseif reservation.status == 'confirmed' %}
                        <span class="badge bg-success">{{ 'reservation.status.confirmed'|trans }}</span>
                    {% elseif reservation.status == 'canceled' %}
                        <span class="badge bg-danger">{{ 'reservation.status.canceled'|trans }}</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ reservation.status }}</span>
                    {% endif %}
                </td>

                <td class="text-center">
                    <a class="btn btn-sm btn-primary" href="{{ path('app_reservation_show', {'id': reservation.id}) }}">
                        {{ 'action.show'|trans }}
                    </a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">
                        {{ 'action.edit'|trans }}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" class="text-center text-muted">{{ 'reservations.none_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if totalPages is defined and totalPages > 1 %}
        <nav aria-label="{{ 'reservations.pagination'|trans }}">
            <ul class="pagination justify-content-center">
                {% for page in 1..totalPages %}
                    <li class="page-item {% if page == currentPage %}active{% endif %}">
                        <a class="page-link" href="{{ path('app_reservation_index', {'page': page, 'q': query}) }}">{{ page }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    {% endif %}

</div>
{% endblock %}
