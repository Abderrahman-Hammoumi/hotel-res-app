<!DOCTYPE html>
{% set currentLocale = app.request.locale|default('en')|slice(0, 2) %}
{% set isRtl = currentLocale == 'ar' %}
<html lang="{{ currentLocale }}" dir="{{ isRtl ? 'rtl' : 'ltr' }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ 'app.name'|trans }}{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>H</text></svg>">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap{{ isRtl ? '.rtl' : '' }}.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="{{ asset('styles/app.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>

<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg app-navbar sticky-top">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{% if is_granted('ROLE_ADMIN') %}{{ path('app_home') }}{% elseif is_granted('ROLE_RECEPTIONIST') %}{{ path('app_customer_index') }}{% else %}{{ path('app_home') }}{% endif %}">
            <i class="bi bi-building me-2"></i>{{ 'app.name'|trans }}
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_home' %}active{% endif %}"
                           href="{{ path('app_home') }}">
                            <i class="bi bi-speedometer2 me-1"></i>{{ 'nav.dashboard'|trans }}
                        </a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_RECEPTIONIST') %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_room' %}active{% endif %}"
                           href="{{ path('app_room_index') }}">
                            <i class="bi bi-door-closed me-1"></i>{{ 'nav.rooms'|trans }}
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_customer' %}active{% endif %}"
                           href="{{ path('app_customer_index') }}">
                            <i class="bi bi-people me-1"></i>{{ 'nav.customers'|trans }}
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_reservation' %}active{% endif %}"
                           href="{{ path('app_reservation_index') }}">
                            <i class="bi bi-calendar2-check me-1"></i>{{ 'nav.reservations'|trans }}
                        </a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_CLIENT') and not is_granted('ROLE_RECEPTIONIST') and not is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_my_reservations' %}active{% endif %}"
                           href="{{ path('app_my_reservations') }}">
                            <i class="bi bi-suitcase-lg me-1"></i>{{ 'nav.my_reservations'|trans }}
                        </a>
                    </li>
                {% endif %}
            </ul>

            <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-translate me-1"></i>{{ ('locale.' ~ currentLocale)|trans }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item {% if currentLocale == 'en' %}active{% endif %}" href="{{ path('app_locale_switch', {locale: 'en'}) }}">{{ 'locale.en'|trans }}</a></li>
                        <li><a class="dropdown-item {% if currentLocale == 'fr' %}active{% endif %}" href="{{ path('app_locale_switch', {locale: 'fr'}) }}">{{ 'locale.fr'|trans }}</a></li>
                        <li><a class="dropdown-item {% if currentLocale == 'ar' %}active{% endif %}" href="{{ path('app_locale_switch', {locale: 'ar'}) }}">{{ 'locale.ar'|trans }}</a></li>
                    </ul>
                </li>

                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i>{{ app.user.email }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-1"></i>{{ 'nav.logout'|trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="btn btn-outline-primary btn-sm" href="{{ path('app_login') }}">{{ 'nav.login'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary btn-sm" href="{{ path('app_register') }}">{{ 'nav.register'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<!-- Main content -->
<main class="container py-4 py-lg-5">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message|trans }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<!-- Footer -->
<footer class="bg-white border-top py-3 mt-5">
    <div class="container text-center text-muted">
        <small>
            &copy; {{ "now"|date("Y") }} {{ 'app.name'|trans }} - {{ 'footer.built_with'|trans }}
            <span class="mx-2">|</span>
            <span>{{ 'footer.call'|trans }}: <a class="text-muted text-decoration-none" href="tel:0511223344">0511223344</a></span>
            <span class="mx-2">|</span>
            <span>{{ 'footer.email'|trans }}: <a class="text-muted text-decoration-none" href="mailto:HotelRes@gmail.com">HotelRes@gmail.com</a></span>
        </small>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
