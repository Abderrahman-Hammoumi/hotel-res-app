<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}HotelRes{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>H</text></svg>">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>

<body class="bg-light">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{% if is_granted('ROLE_ADMIN') %}{{ path('app_home') }}{% elseif is_granted('ROLE_RECEPTIONIST') %}{{ path('app_customer_index') }}{% else %}{{ path('app_home') }}{% endif %}">
            HotelRes
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
            {% if app.user %}
                <li class="nav-item">
                    <span class="nav-link text-white">Hello {{ app.user.email }}</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                </li>
            {% endif %}


                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_home' %}active{% endif %}"
                           href="{{ path('app_home') }}">
                            Dashboard
                        </a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_RECEPTIONIST') %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_room' %}active{% endif %}"
                           href="{{ path('app_room_index') }}">
                            Rooms
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_customer' %}active{% endif %}"
                           href="{{ path('app_customer_index') }}">
                            Customers
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_reservation' %}active{% endif %}"
                           href="{{ path('app_reservation_index') }}">
                            Reservations
                        </a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_CLIENT') and not is_granted('ROLE_RECEPTIONIST') and not is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') starts with 'app_my_reservations' %}active{% endif %}"
                           href="{{ path('app_my_reservations') }}">
                            My Reservations
                        </a>
                    </li>
                {% endif %}

            </ul>
        </div>
    </div>
</nav>

<!-- Main content -->
<main class="container py-4">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<!-- Footer -->
<footer class="bg-white border-top py-3 mt-5">
    <div class="container text-center text-muted">
        <small>
            &copy; {{ "now"|date("Y") }} HotelRes - Built with Symfony + Bootstrap
            <span class="mx-2">|</span>
            <span>Call: <a class="text-muted text-decoration-none" href="tel:0511223344">0511223344</a></span>
            <span class="mx-2">|</span>
            <span>Email: <a class="text-muted text-decoration-none" href="mailto:HotelRes@gmail.com">HotelRes@gmail.com</a></span>
        </small>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
