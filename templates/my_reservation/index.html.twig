{% extends 'base.html.twig' %}

{% block title %}My Reservations{% endblock %}

{% block stylesheets %}
    <style>
        .hero {
            background: linear-gradient(120deg, #0d6efd, #6610f2);
            color: #fff;
            border-radius: 18px;
            padding: 28px;
            box-shadow: 0 18px 40px rgba(0, 0, 0, 0.12);
        }
        .glass {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 12px 30px rgba(17, 24, 39, 0.08);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }
        .status-pill {
            font-weight: 700;
            padding: 6px 12px;
            border-radius: 999px;
            display: inline-block;
        }
        .status-pending { background: #fff3cd; color: #8a6d00; }
        .status-approved { background: #d1e7dd; color: #0f5132; }
        .status-canceled { background: #f8d7da; color: #842029; }
        .reservation-card {
            padding: 18px;
            transition: transform 0.15s ease, box-shadow 0.15s ease;
        }
        .reservation-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 16px 28px rgba(17, 24, 39, 0.12);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="hero mb-4 d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
            <p class="mb-2 text-uppercase small fw-semibold opacity-75">Welcome back</p>
            <h1 class="mb-1">Your stays, at a glance</h1>
            <p class="mb-0">Check the status of your bookings and plan your next visit.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-light text-primary fw-semibold" href="{{ path('app_my_reservation_new') }}">+ New reservation</a>
            <a class="btn btn-outline-light" href="{{ path('app_logout') }}">Logout</a>
        </div>
    </div>

    {% if customer is null %}
        <div class="alert alert-info glass">
            We could not find your customer profile. If you just registered, please contact reception to link your reservations.
        </div>
    {% endif %}

    <div class="row g-3">
        {% for reservation in reservations %}
            <div class="col-12 col-md-6">
                <div class="glass reservation-card h-100">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="fw-bold">Room {{ reservation.room.number }} â€¢ {{ reservation.room.type }}</div>
                        {% if reservation.status == 'pending' %}
                            <span class="status-pill status-pending">Pending</span>
                        {% elseif reservation.status == 'confirmed' %}
                            <span class="status-pill status-approved">Approved</span>
                        {% elseif reservation.status == 'canceled' %}
                            <span class="status-pill status-canceled">Canceled</span>
                        {% else %}
                            <span class="status-pill bg-secondary text-white">{{ reservation.status }}</span>
                        {% endif %}
                    </div>
                    <div class="text-muted small mb-2">{{ reservation.room.price }} MAD / night</div>
                    <div class="row small mb-2">
                        <div class="col-6">
                            <div class="text-muted">Check in</div>
                            <div class="fw-semibold">{{ reservation.CheckIn ? reservation.CheckIn|date('Y-m-d') : '' }}</div>
                        </div>
                        <div class="col-6">
                            <div class="text-muted">Check out</div>
                            <div class="fw-semibold">{{ reservation.CheckOut ? reservation.CheckOut|date('Y-m-d') : '' }}</div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="fw-bold fs-5 text-primary mb-0">{{ reservation.totalPrice }} MAD</div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="glass p-4 text-center text-muted">
                    No reservations yet. <a href="{{ path('app_my_reservation_new') }}">Create your first one</a>.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
