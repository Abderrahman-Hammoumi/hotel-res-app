{% extends 'base.html.twig' %}

{% block title %}{{ 'customer.edit.title'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header">
                <h4 class="mb-0">{{ 'customer.edit.title'|trans }}</h4>
            </div>

            <div class="card-body p-4">
                {{ include('customer/_form.html.twig', {'button_label': 'action.update'}) }}

                <div class="d-flex justify-content-between mt-3 flex-wrap gap-2">
                    <a class="btn btn-outline-secondary" href="{{ path('app_customer_index') }}">{{ 'action.back'|trans }}</a>
                    <a class="btn btn-success" href="{{ path('app_reservation_new', {'customer': customer.id}) }}">{{ 'customers.add_reservation'|trans }}</a>
                    {{ include('customer/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
