{% extends 'base.html.twig' %}

{% block title %}Room Details{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Room Details</h3>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ room.id }}</td>
                    </tr>
                    <tr>
                        <th>Number</th>
                        <td>{{ room.number }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ room.type }}</td>
                    </tr>
                    <tr>
                        <th>Capacity</th>
                        <td>{{ room.capacity }} guests</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td><strong>{{ room.price }} MAD</strong></td>
                    </tr>
                    <tr>
                        <th>Available</th>
                        <td>
                            {% if room.isAvailable %}
                                <span class="badge bg-success">Yes</span>
                            {% else %}
                                <span class="badge bg-danger">No</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex gap-2">
                <a class="btn btn-secondary" href="{{ path('app_room_index') }}">Back</a>
                <a class="btn btn-warning" href="{{ path('app_room_edit', {'id': room.id}) }}">Edit</a>
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('room/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
