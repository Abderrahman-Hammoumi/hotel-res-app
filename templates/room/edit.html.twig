{% extends 'base.html.twig' %}

{% block title %}Edit Room{% endblock %}

{% block body %}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning">
                <h4 class="mb-0">Edit Room</h4>
            </div>

            <div class="card-body p-4">
                {{ include('room/_form.html.twig', {'button_label': 'Update'}) }}

                <div class="d-flex justify-content-between mt-3">
                    <a class="btn btn-outline-secondary" href="{{ path('app_room_index') }}">Back</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('room/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
