{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.rooms'|trans }}{% endblock %}

{% block body %}
<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h1 class="mb-1">{{ 'rooms.title'|trans }}</h1>
            <p class="text-muted mb-0">{{ 'rooms.available_summary'|trans({'%available%': availableRooms|length, '%total%': totalRooms}) }}</p>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('app_room_new') }}">{{ 'rooms.add_room'|trans }}</a>
        {% endif %}
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header fw-semibold">{{ 'rooms.available'|trans }}</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>{{ 'rooms.number'|trans }}</th>
                                <th>{{ 'rooms.type'|trans }}</th>
                                <th>{{ 'rooms.capacity'|trans }}</th>
                                <th>{{ 'rooms.price'|trans }}</th>
                                <th class="text-center">{{ 'rooms.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for room in availableRooms %}
                            <tr>
                                <td>{{ 'rooms.room_number'|trans({'%number%': room.number}) }}</td>
                                <td>{{ room.type }}</td>
                                <td>{{ 'rooms.guests'|trans({'%count%': room.capacity}) }}</td>
                                <td>{{ room.price }} MAD</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-primary" href="{{ path('app_room_show', {'id': room.id}) }}">{{ 'action.show'|trans }}</a>
                                    <a class="btn btn-sm btn-warning" href="{{ path('app_room_edit', {'id': room.id}) }}">{{ 'action.edit'|trans }}</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-3">{{ 'rooms.no_available'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header fw-semibold">{{ 'rooms.not_available'|trans }}</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>{{ 'rooms.number'|trans }}</th>
                                <th>{{ 'rooms.type'|trans }}</th>
                                <th>{{ 'rooms.capacity'|trans }}</th>
                                <th>{{ 'rooms.price'|trans }}</th>
                                <th class="text-center">{{ 'rooms.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for room in unavailableRooms %}
                            <tr>
                                <td>{{ 'rooms.room_number'|trans({'%number%': room.number}) }}</td>
                                <td>{{ room.type }}</td>
                                <td>{{ 'rooms.guests'|trans({'%count%': room.capacity}) }}</td>
                                <td>{{ room.price }} MAD</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-primary" href="{{ path('app_room_show', {'id': room.id}) }}">{{ 'action.show'|trans }}</a>
                                    <a class="btn btn-sm btn-warning" href="{{ path('app_room_edit', {'id': room.id}) }}">{{ 'action.edit'|trans }}</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-3">{{ 'rooms.no_unavailable'|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
