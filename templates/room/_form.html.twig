{{ form_start(form) }}

{% if form.number is defined %}
    <div class="mb-3">
        {{ form_label(form.number) }}
        {{ form_widget(form.number, {'attr': {'class': 'form-control', 'placeholder': 'room.placeholder.number'|trans }}) }}
        {{ form_errors(form.number) }}
    </div>
{% endif %}

{% if form.type is defined %}
    <div class="mb-3">
