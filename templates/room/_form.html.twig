{% endif %}

{% if form.isAvailable is defined %}
    <div class="form-check mb-4">
        {{ form_widget(form.isAvailable, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.isAvailable, null, {'label_attr': {'class': 'form-check-label'}}) }}
    </div>
{% endif %}

<button class="btn btn-primary w-100">{{ (button_label|default('action.save'))|trans }}</button>

{{ form_end(form) }}
