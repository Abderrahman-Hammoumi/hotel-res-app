{% extends 'base.html.twig' %}

{% block title %}{{ 'room.new.title'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header">
                <h4 class="mb-0">{{ 'room.new.title'|trans }}</h4>
            </div>

            <div class="card-body p-4">
                {{ include('room/_form.html.twig', {'button_label': 'room.save' }) }}

                <div class="mt-3">
                    <a class="btn btn-outline-secondary" href="{{ path('app_room_index') }}">{{ 'action.back_to_list'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
